@model LOGHouseSystem.Models.ShippingCompany
@using LOGHouseSystem.Infra.Enums
<form asp-controller="ShippingCompany" asp-action="Edit" method="post" id="CreateForm">
    <div class="row  d-flex justify-content-center mt-5">
        <div class=" d-flex justify-content-center">
            <div class="card col-md-6">
                <div class="card-body ">
                    <div class="text-center">
                        <img class="" src="~/img/logoazul.png" style="width:20%" />
                        <h3 class="font-weight-bold">Transportadora</h3>
                        <h5>Editar Transportadora</h5>
                    </div>
                    <div class="form-row mt-5">

                        <div class="form-group col-md-8">
                            <label for="SocialReason">@Html.DisplayNameFor(model => model.Name)</label>
                            <input asp-for="Name" type="text" class="form-control" id="Supplier" placeholder="Digite o nome da Transportadora">
                            @Html.ValidationMessageFor(x => x.Name)
                        </div>
                        <div class="form-group col-md-4">
                            <label for="permission">@Html.DisplayNameFor(model => model.Active)</label>
                            <br />
                            <select asp-for="Active" class="form-control" id="OrderOrigin">
                                <option value="">Selecione</option>

                                @foreach (var item in Enum.GetValues(typeof(Status)).Cast<Status>())
                                {
                                    if(Model.Active != 0)
                                    {
                                        <option value="@Model.Active" selected>@Html.DisplayFor(modelItem => item)</option>
                                    }
                                    else
                                    {
                                        <option value="@item">@Html.DisplayFor(modelItem => item)</option>
                                    }

                                }

                            </select>
                        </div>
                    </div>
                    <div class="row d-flex  justify-content-center">

                        <button class="btn btn-light btn-block mt-3" id="loadingSpinner" type="button">
                            <i class="fa-solid fa-spinner fa-spin"></i>
                        </button>

                        <button class="btn btn-success col-md-6 mt-3" type="submit" id="submitButton">Adicionar</button>

                        <a class="btn btn-primary col-md-4 ml-3 mt-3 mr-3" asp-controller="ShippingCompany" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />


    <br />




</form>

@section Scripts {
    <script src="~/lib/jQuery-Mask-Plugin-master/src/jquery.mask.js"></script>

    <script>

        $(document).ready(function () {

            $("#loadingSpinner").hide();
        });

        $("#CreateForm").submit(() => {
            $("#submitButton").hide();
            $("#loadingSpinner").show();
        })


    </script>
}
